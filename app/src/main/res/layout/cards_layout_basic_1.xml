<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_overlap_top"
    style="@style/MyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/first_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_location_grey" />

        <TextView
            android:id="@+id/txt_first"
            style="@style/MyTextViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/address"
            app:layout_constraintBottom_toBottomOf="@id/first_img"
            app:layout_constraintLeft_toRightOf="@id/first_img"
            app:layout_constraintTop_toTopOf="@id/first_img" />

        <ImageView
            android:id="@+id/second_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_img"
            app:srcCompat="@drawable/ic_local_phone_grey" />

        <TextView
            android:id="@+id/txt_second"
            style="@style/MyTextViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/phone"
            app:layout_constraintBottom_toBottomOf="@id/second_img"
            app:layout_constraintLeft_toRightOf="@id/second_img"
            app:layout_constraintTop_toTopOf="@id/second_img" />

        <ImageView
            android:id="@+id/third_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_img"
            app:srcCompat="@drawable/ic_recent_grey" />

        <TextView
            android:id="@+id/txt_third"
            style="@style/MyTextViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/timings"
            app:layout_constraintBottom_toBottomOf="@id/third_img"
            app:layout_constraintLeft_toRightOf="@id/third_img"
            app:layout_constraintTop_toTopOf="@id/third_img" />

        <ImageView
            android:id="@+id/fourth_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_img"
            app:srcCompat="@drawable/ic_mail_grey" />

        <TextView
            android:id="@+id/txt_four"
            style="@style/MyTextViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/my_email"
            app:layout_constraintBottom_toBottomOf="@id/fourth_img"
            app:layout_constraintLeft_toRightOf="@id/fourth_img"
            app:layout_constraintTop_toTopOf="@id/fourth_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>